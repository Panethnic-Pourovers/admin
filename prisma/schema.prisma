generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id             String          @id @default(cuid())
  barcodeId      String          @unique @default(cuid())
  title          String
  author         String
  genres         Genre[]
  regions        Region[]
  location       Location?       @relation(fields: [locationId], references: [id])
  members        LibraryMember[]
  lastCheckedOut DateTime
  locationId     String
}

model Genre {
  id     String  @id @default(cuid())
  name   String
  Book   Book?   @relation(fields: [bookId], references: [id])
  bookId String?
}

model Region {
  id     String  @id @default(cuid())
  name   String
  Book   Book?   @relation(fields: [bookId], references: [id])
  bookId String?
}

model Location {
  id   String @id @default(cuid())
  name String
  Book Book[]
}

model LibraryMember {
  id         String  @id @default(cuid())
  firstName  String
  lastName   String
  email      String
  phone      String?
  checkedOut Book[]
  history    String
}
