generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id             String          @id @default(cuid())
  barcodeId      String
  title          String
  author         String
  genres         Genre[]
  regions        Region[]
  location       String
  members        LibraryMember[]
  lastCheckedOut DateTime
  copies         Int
}

model Genre {
  id     String  @id @default(cuid())
  name   String
  Book   Book?   @relation(fields: [bookId], references: [id])
  bookId String?
}

model Region {
  id     String  @id @default(cuid())
  name   String
  Book   Book?   @relation(fields: [bookId], references: [id])
  bookId String?
}

model LibraryMember {
  id         String  @id @default(cuid())
  firstName  String
  lastName   String
  email      String
  phone      String?
  checkedOut Book[]
  history    String
}
